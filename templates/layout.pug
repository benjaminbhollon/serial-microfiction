doctype html
html(lang="en")
  head
    block head
      - metaImage = ""
      block variables
      block resources
        link(rel="stylesheet" href="/lib/global.css")
        script(src="/lib/global.js" defer)
      block meta
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        meta(name="description" content=metaDescription)
        meta(name="author" content=config.author)
        meta(property="og:title" content=title + " | " + config.title + " " + config.author)
        meta(property="og:type" content="book")
        meta(property="og:book:author" content="website")
        meta(property="og:description" content=metaDescription)
        meta(property="og:image" content=metaImage)
      block title
        title #{title} | #{config.title} by #{config.author}
  body
    span.hidden#releasedOn #{JSON.stringify(config.releasedOn)}
    block navbar
      nav.main-nav
        a.main-nav__title(href="/") #{config.title}
        a.main-nav__author(href="/about-the-author/") #{config.author}
    #content
      block content
    block footer
      footer
        p #{config.copyright.replace("[[YEARS]]", config.startYear !== new Date().getFullYear() ? config.startYear + "-" + (new Date()).getFullYear() : config.startYear).replace("[[AUTHOR]]", config.author)}
        p next flash in 
          span#countdown
